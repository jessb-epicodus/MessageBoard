              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li><a class="dropdown-item" href="/messages">View All</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container mt-2">
        <h1>@ViewBag.PageTitle</h1>
        @RenderBody()
      </div>
    </div>
  </body>
</html>
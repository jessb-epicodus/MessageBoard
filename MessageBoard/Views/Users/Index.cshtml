@{Layout = "_Layout";}

@using MessageBoard.Models;
@model List<MessageBoard.Models.User>;  

<h1>Users</h1><hr>

@if (@Model.Count == 0 ) {
  <p><em>No users have been added.</em></p>
}
<ul>
  @foreach(User user in Model) {
    <p>@Html.ActionLink($"{user.UserName}", "Details", new {user.UserId})</p>
  }
</ul>
<p>@Html.ActionLink("Add User", "Create")</p>
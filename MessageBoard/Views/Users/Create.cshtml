@{
  Layout = "_Layout";
}
@using MessageBoard.Models;
@model MessageBoard.Models.User;  

<div class="row mt-5">
  <div class="col-3">
  </div>
  <div class="col-6">
  <h4>Add a User</h4>
  <hr class="px-5">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(m => Model.UserName, "User Name")
      @Html.TextBoxFor(m => Model.UserName, new { @class = "form-control"})
      <input type="submit" value="Add User" class="btn btn-dark mt-2">
    }
  </div>
  <div class="col-3">
</div>
</div>
<hr/>

@{Layout = "_Layout";}

@using MessageBoard.Models;
@model List<MessageBoard.Models.Room>;  

<h1>Rooms</h1>
<hr>

@if (@Model.Count == 0 ) 
{
  <p><em>No rooms exist.</em></p>
}
<ul>
  @foreach(Room room in Model) 
  {
    <p>@Html.ActionLink($"{room.Name}", "Details", new { id = room.RoomId })</p>
  }
</ul>
<p>@Html.ActionLink("Add Room", "Create")</p>
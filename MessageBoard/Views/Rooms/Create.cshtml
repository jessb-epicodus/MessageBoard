@{
  Layout = "_Layout";
}
@using MessageBoard.Models;
@model MessageBoard.Models.Room;  

<div class="row mt-5">
  <div class="col-3">
  </div>
  <div class="col-6">
  <h4>Add a Room</h4>
  <hr class="px-5">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(m => Model.Name, "Room Name")
      @Html.TextBoxFor(m => Model.Name, new { @class = "form-control"})
      <input type="submit" value="Add Room" class="btn btn-dark mt-2">
    }
  </div>
  <div class="col-3">
</div>
</div>
<hr/>
